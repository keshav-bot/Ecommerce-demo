 
@model CategoryModel
@{
    ViewData["Title"] = "Index";
}

<div class="m-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Admin-Home</a></li>

            <li class="breadcrumb-item active" aria-current="page">Category</li>
        </ol>
    </nav>
    @if(ViewBag.success ==true)
    {
        <p> data is added</p>
        
    }
    <div class="card">

        <div class="card-body">
            <div class="row">
                <div class="col-sm-4 col-12">
                    <div class="card">
                        <div class="card-header bg-white"><div class="card-title text-center text-primary h3">Add new Category</div></div>
                        <div class="card-body">
                            <form method="post" asp-action="Index">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Title" class="col-form-label"></label>
                                    <input asp-for="Title" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input class="btn btn-primary" type="submit" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8 col-12">
                    <h1 class="text-center text-primary">All category</h1>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">SN:</th>
                                <th scope="col">Title</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.category!= null)
                            {

                                @foreach (var item in Model.category)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>
                                            <a asp-action="Edit" class="text-secondary" asp-controller="Category" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                                            <a asp-action="DeleteCategory" class="text-danger" asp-controller="Category" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center h3">None at this moment..</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>


</div>


