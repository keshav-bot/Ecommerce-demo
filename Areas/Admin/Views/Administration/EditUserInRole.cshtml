@using KKTraders.Models.ViewModel 
@model List<EditUserInRoleViewModel>
@{
    ViewData["Title"] = "EditUserInRole";
}
@{ 
    var roleId = ViewBag.RoleId;
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h1 class="text-primary">Add or Remove User....</h1>
        </div>
   
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].UserId" type="hidden" />
                    <input asp-for="@Model[i].UserName" type="hidden" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="text-primary form-check-label">@Model[i].UserName</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="update" class="btn btn-outline-primary" />
            <a asp-action="EditRole" asp-controller="Administration" class="btn btn-outline-primary">Cancel</a>
        </div>
    </div>
</form>

