@model IEnumerable<ProductModel>
@if (Model != null)
{
    <div class="card mt-2">
        <div class="card-header bg-dark">
            <i class="fab fa-jedi-order text-white "></i> <span class="text-white">My Order</span>
        </div>
        <div class="card-body">
            <table class=" table table-striped table-bordered table-hover"> 
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Units</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>1</td>
                            <td><a><i class="fas fa-trash-alt text-danger"></i></a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <i class="fab fa-jedi-order"></i> <p class="text-secondary">My Order</p>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Units</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="4">  You current do not have any order</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
 }
            


