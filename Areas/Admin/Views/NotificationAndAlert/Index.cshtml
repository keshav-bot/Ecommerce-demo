@model IList<ProductModel>
@{ 
    double difference = 0;
}
<div class="row" style="padding-left:100px;padding-right:100px;">
    <table class="table table-striped table-bordered" style="margin-top:30px;">
        <thead>
            
            <tr>
                <td scope="col">Product Name</td>
                <td scope="col">Quantiy Required</td>
                <td scope="col">Quantity left</td>
                <td scope="col">Status</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                difference = item.MinimumUnits -item.Units;
                <tr>
                    <td>
                        @item.Name
                    </td>                    
                    <td class="text-dark">@item.MinimumUnits</td>
                    <td class="text-dark">@item.Units</td>
                    <td class="text-danger"> Your stock is @difference units Less . </td>            
                    
                </tr>
            }
            </tbody>
    </table>


</div>

