@model SupplierModel
<div class="m-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Admin-Home</a></li>

            <li class="breadcrumb-item active" aria-current="page">Supplier</li>
        </ol>
    </nav>
    @if (ViewBag.success == true)
    {
        <p> data is added</p>

    }
    <div class="card">

        <div class="card-body">
            <div class="row">
                <div class="col-sm-4 col-12">
                    <div class="card">
                        <div class="card-header bg-white"><div class="card-title text-center text-primary h3">Add new supplier</div></div>
                        <div class="card-body">
                            <form method="post" asp-action="Index">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" class="col-form-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address" class="col-form-label"></label>
                                    <input asp-for="Address" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="col-form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input class="btn btn-primary" type="submit" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8 col-12">
                    <h1 class="text-center text-primary">All Supplier</h1>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">SN:</th>
                                <th scope="col">Title</th>
                                <th scope="col">PhoneNumber</th>
                                <th scope="col">Address</th>
                                <th scope="col">Status</th>
                                <th scope="col"> Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.supplier != null)
                            {

                                @foreach (var item in Model.supplier)
                                {
                                    <tr>
                                        <td>#                                  
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Address</td>
                                        <td>
                                            @if (item.status == 1)
                                            {
                                                <i class="fas fa-circle text-primary"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-circle text-danger"></i>
                                            }
                                        </td>
                                        <td><a asp-action="Details" asp-route-id="@item.Id" asp-controller="Suppliers">
                                            <i class="fas fa-eye text-primary"></i>
                                        </a>
                                            <a asp-action="Edit" class="text-secondary" asp-controller="Suppliers" asp-route-id="@item.Id"><i class="fas fa-edit h3"></i></a>
                                            <form asp-action="Delete" asp-route-id="@item.Id"  class="d-inline">
                                                <input type="submit" value="Delete" class="btn btn-danger" />
                                            </form>
                                        </td>
                                    </tr>
                                    
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center h3">None at this moment..</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
            
    </div>
</div>