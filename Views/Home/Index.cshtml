@using KKTraders.Data
@model IEnumerable<Product>
<section id="slider">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/DefaultImages/WhareHouse2.jpg" class="d-block w-100" alt="..." />
                <div class="carousel-caption d-none d-md-block">
                    <h5 class=" text-white wow slide fadeInDown" data-wow-duration="1s">WELCOME TO KKTraders</h5>
                    <h1 class=" text-white  wow  slide fadeInUp" data-wow-duration="1s">Get The Best Price From Us.</h1>
                    <a asp-fragment="shop" class="btn btn-danger">SHOP NOW</a>
                </div>

            </div>
            <div class="carousel-item">
                <img src="~/Images/DefaultImages/WhareHouse1.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class=" text-white wow slide fadeInDown" data-wow-duration="1s">WELCOME TO KKTraders</h5>
                    <h1 class=" text-white wow slide fadeInUp" data-wow-duration="1s">Get The Best Price From Us.</h1>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-danger text-white">SHOP NOW</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<section id="header-top">
    
    <div class="container">
          
        <div class="row">
            <div class="col-md-6 col-12">
                <div class="item-zoom">
                    <img src="~/Images/DefaultImages/solar.jpg" class="img-fluid" alt="img-responsive">
                    <div class="top-right text-danger">SAVE 10%</div>
                    <div class="bottom-right text-white">Solar Panel</div>
                </div>
            </div>
            <div class="col-md-6 col-12">
                <div class="item-zoom">
                    <img src="~/Images/DefaultImages/generator.jpg" class="img-fluid" alt="img-responsive">
                    <div class="top-right text-danger">SAVE 20%</div>
                    <div class="bottom-right text-white">Genarator</div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container" id="shop">
        <h6>special offer</h6>
        <h2>BEST COLLECTION</h2>
        <div class="row pt-4">
            <div class="owl-carousel owl-theme">
                @foreach (var item in Model)
                {

                    var actualPrice = item.Price - item.Discount;
                    @if (item.Units > item.MinimumUnits)
                    {
                        <div class="item">
                            <div class="product-grid4">
                                <div class="product-image4">
                                    <a asp-action="ProductDetails" asp-controller="Home" asp-route-id="@item.Id">
                                        <img class="pic-1" src="@item.ProductImageUrl">
                                        <img class="pic-2" src="@item.ProductImageUrl">

                                    </a>
                                    <ul class="social">

                                        <li><a asp-action="ProductDetails" asp-controller="Product" asp-route-id="@item.Id" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>

                                        <li><a class="add-to-cart" cardid="@item.Id" data-tip="Add to Cart"><i class="fas fa-shopping-cart"></i></a></li>
                                    </ul>
                                    <span class="product-new-label">New</span>
                                    <span class="product-discount-label">-10%</span>
                                </div>
                                <div class="product-content">
                                    <h3 class="title"><a href="#"> @item.Name</a></h3>
                                    <div class="price">
                                        RS @actualPrice
                                        <span>Rs @item.Price </span>
                                    </div>
                                    <a class="add-to-cart btn btn-danger text-white" cardid="@item.Id">ADD TO CART</a>
                                </div>
                            </div>

                        </div>
                    }


                }
            </div>

        </div>

    </div>


</section>
<section id="banner-top">
    <div class="parallax-window" data-parallax="scroll" data-image-src="">
        <div class="middle">
            <h1>@DateTime.Now.Year</h1>
            <h2>We Offer New Tools And Technology</h2>
            <h3>Buy From Us And Save Large Amount Of Money</h3>
            <h4 class="text-success">IN BULK PURCHASE WE OFFER YOU FREE DELIVERY SERVICE</h4>
        </div>

    </div>
</section>
<div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-men" role="tabpanel" aria-labelledby="nav-men-tab">
        <div class="row">
            @foreach (var item in Model)
            {
                @if (item.Units > item.MinimumUnits)
                {
                    var actualPrice = item.Price - item.Discount;
                    <div class="col-md-3 col-12">
                        <div class="product-grid4">
                            <div class="product-image4">
                                <a href="product-detail.html">
                                    <img class="pic-1" src="@item.ProductImageUrl">
                                    <img class="pic-2" src="@item.ProductImageUrl">
                                </a>
                                <ul class="social">

                                    <li><a asp-action="ProductDetails" asp-controller="Product" asp-route-id="@item.Id" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>
                                    <li><a class="add-to-cart" cardid="@item.Id" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                                <span class="product-new-label">New</span>

                            </div>
                            <div class="product-content">
                                <h3 class="title"><a href="#">@item.Name</a></h3>
                                <div class="price">
                                    RS @actualPrice
                                    <span>RS @item.Discount</span>
                                </div>
                                <a class="add-to-cart btn btn-danger text-white" cardid="@item.Id">ADD TO CART</a>
                            </div>
                        </div>
                    </div>
                  }
             }

            </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".add-to-cart").click(function () {
                var attr = $(this).attr("cardid");
                $.ajax({
                    type: "get",
                    contentType:"application/json;",
                    url: "/Cart/AddToCart",                  
                    data: { "id": attr },
                    success: function (data) {
                        $("#count").html(data);
                        
                        Lobibox.notify('success', {
                            size: 'normal',
                            icon: false,     
                            position: "top right", 
                            delayIndicator: true,
                             msg: 'Item added to the shopping cart',
                            delay: 5000,
                            closeOnClick: true,
                            sound:true,

                            }); 
                    }

                })
            });
        });
    </script>
}
