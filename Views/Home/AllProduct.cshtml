@model IEnumerable<Product>
@{
    ViewData["Title"] = "AllProduct";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-3 col-sm-3">
            <a asp-action="ProductDetails" asp-controller="Home" asp-route-id="@item.Id" id="view-cart">
                <div class="card mt-2">
                    <img src="@item.ProductImageUrl" style="height:200px; width:300px;" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                </div>
            </a> 
        </div>
    }
</div>

